@model IEnumerable<ApplicationUser>
<br />
<div class="row">
    <div class="col-6">
        <div class="float-left">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary mb-4"><i class="fas fa-home"> Menu Principal </i></a>
        </div>
    </div>
    <div class="col-6">
        <div class="float-right">
            <a asp-action="RegisterUser" asp-controller="Account" class="btn btn-primary mb-4"><i class="fa fa-plus"> Crear Usuario </i></a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12  ">
        <h2 class="text-dark text-center">Lista de Usuarios </h2>
    </div>
</div>
<div class="p-4   rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-hover border table-striped ">
            <tr class="table-primary">
                <th>
                    Correo Electronico
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Roles
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="border">
                        @item.Email
                    </td>
                    <td class="border">
                        @item.Nombre
                    </td>
                    <td class="border">
                        @item.Role
                    </td>
                    <td class="text-center border w-25">
                        <form asp-action="Delete" asp-route-userId="@item.Id">

                            <a class="btn btn-primary btn-sm  " asp-action="Edit" asp-route-userid="@item.Id"><i class="far fa-edit"> Editar</i></a>
                            @*<a class="btn btn-danger btn-sm   " asp-action="Delete" asp-route-userid="@item.Id"><i class="fas fa-trash"> Eliminar</i></a>*@
                            
                            <button type="submit" onclick="return confirm('Esta Seguro de eliminar el usuario ?')"
                                    class="btn btn-danger btn-sm  ">
                                Eliminar
                            </button>
                        </form>
                    </td>
            
                </tr>
            }
        </table>
    }
</div>