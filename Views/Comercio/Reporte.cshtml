@model IEnumerable<Order2Go.Models.Comercio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <div class="float-left">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary mb-4"><i class="fas fa-home"> Menu Principal </i></a>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h5 class="text-center"><strong>Consulta Ventas de Comercios</strong></h5>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-sm table-bordered table-striped  table-hover" id="TablaFisicos" width="100%">
                        <thead class="thead-light">
                            <tr>
                                <th class=" text-center">@Html.DisplayNameFor(m => m.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m => m.Descripcion)</th>
                                <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-center">@Html.DisplayFor(m => item.Id)</td>
                                <td class="text-center">@Html.DisplayFor(m => item.Nombre)</td>
                                <td class="text-center">@Html.DisplayFor(m => item.Descripcion)</td>
                                <td class="text-center">@Html.DisplayFor(m => item.Telefono)</td>
                                <td class="text-center w-25">
                                    <a class="btn btn-primary btn-sm" asp-controller="Facturas" asp-action="ConsultaVentas" asp-route-id="@item.Id"><i class="far fa-edit"> Consulta Ventas</i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No existen registros en la Base Datos</p>
                }
            </div>

        </div>

    </div>
</div>
